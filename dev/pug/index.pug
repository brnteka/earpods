									.countdown__digits-panel
										span.countdown__digits#countdown-seconds
									.countdown__digits-description SECONDI
						.hero__button
							button.button Ordira ora
		section.service-panel-section
			.container
				.panel
					.row.align-items-center
						.col-lg-10
							.panel__text
